<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cv_test"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="4dp"
    app:ignore="NamespaceTypo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
           />


        <TextView
            android:id="@+id/tv_run_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_device_id"
            android:layout_below="@+id/tv_device_id"
             />


        <TextView
            android:id="@+id/tv_breaker_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_run_status"
            android:layout_below="@+id/tv_run_status"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />


        <Button
            android:id="@+id/bt_opt_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/tv_device_id"
            android:text="分闸"
            />


        <Button
            android:id="@+id/bt_opt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bt_opt_open"
            android:layout_below="@+id/bt_opt_open"
            android:layout_marginTop="10dp"
            android:text="合闸"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>
